{{#if image}}
  <div class="project-screenshot" data-name={{name}} data-desc={{projectType}} style='background-image: url({{image}})'>
    {{project-details name=name projectType=projectType details=details show=showInfo githubLink=githubLink webLink=webLink}}
  </div>
{{else}}
  <div class="project-screenshot {{background}}" data-name={{name}} data-desc={{projectType}}>
    {{project-details name=name projectType=projectType details=details show=showInfo githubLink=githubLink webLink=webLink}}
  </div>
{{/if}}
